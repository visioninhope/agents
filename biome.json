{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/drizzle/**",
      "!**/drizzle.config.*",
      "!**/.next/**",
      "!**/build/**",
      "!**/out/**",
      "!**/*.css",
      "!**/.source/**"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "useIterableCallbackReturn": "error",
        "noDocumentCookie": "warn",
        "noAssignInExpressions": "error"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noBannedTypes": "warn",
        "noUselessFragments": "error"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "noNonNullAssertion": "warn",
        "useImportType": "error"
      },
      "performance": {
        "noImgElement": "warn",
        "noDynamicNamespaceImportAccess": "off"
      },
      "a11y": {
        "useSemanticElements": "error",
        "useValidAriaRole": "error",
        "useButtonType": "error"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn",
        "useJsxKeyInIterable": "warn",
        "useUniqueElementIds": "error",
        "noNestedComponentDefinitions": "error",
        "noUnusedFunctionParameters": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/drizzle/**",
      "!**/drizzle.config.*",
      "!**/.next/**",
      "!**/build/**",
      "!**/out/**"
    ],
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  }
}
